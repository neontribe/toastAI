<html>
  <head>
    <title>My Angular App!</title>
    <meta name="viewport" content="width=device-width">
    <script
        src="https://code.jquery.com/jquery-2.2.4.js"
        integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI="
        crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.js"> </script>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.css">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="javascripts/angularApp.js"></script>
  </head>
  <body ng-app="ToastAI" ng-controller="MainCtrl">
    <div class="ui sidebar inverted vertical menu blue">
      <a class="item">
        Login/User
      </a>
      <a class="item">
        View Toast
      </a>
      <a class="item">
        About us
      </a>
      <a class="item">
        Contact Us
      </a>
    </div>
    <div class="pusher">
      <div class="ui secondary  blue inverted menu">
        <a class="icon item" onclick="togglesidebar()">
          <i class="ui content icon" >  </i> 
        </a>
        <a class="header item" href="/">
    T.O.A.S.T. AI
  </a>
      </div>
      <div class="ui text container">
        <a>Sign in </a> / <a> Sign up </a>
        <form class="ui form">
  <div class="field">
    <label>Email</label>
    <input type="text" name="Email" placeholder="Email">
  </div>
  <div class="field" ng-click="togglePasswordShow()">
    <div class="ui checkbox">
      <input type="checkbox" tabindex="0" class="hidden">
      <label>Include Password</label>
    </div>
  </div>
  <div class="field" ng-if="passwordShowing">
    <label>Password</label>
    <input type="password" name="Password" placeholder="Password">
  </div>
  
  <button class="ui button" type="submit">Submit</button>
</form>
<div class="ui divider"></div>
<div class="ui segments">
  <div class="ui inverted pink segment">
    <p>Sarah</p>
  </div>
  <div class="ui inverted red segment">
    <p>Roy</p>
  </div>
  <div class="ui inverted blue segment">
    <p>Bob</p>
  </div>
  <div class="ui inverted orange segment">
    <p>Victor</p>
  </div>
  <div class="ui inverted grey segment">
    <p>Herschel</p>
  </div>
</div>
      </div>
    </div>
  </body>
  <script>
  function togglesidebar() {
$(".ui.sidebar").sidebar("toggle")
 }
 $(".ui.checkbox").checkbox()
</script>
<style>
.header {
  text-align:center
}
.makecentered {
  text-align:center;
  margin:auto
}

.toastbutton {
  margin:10px !important
}
body {
  background-color: #E9ECED;
}
</html>


