<html>
  <head>
    <title>My Angular App!</title>
    <meta name="viewport" content="width=device-width">
    <script
        src="https://code.jquery.com/jquery-2.2.4.js"
        integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI="
        crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.js"> </script>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.css">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="javascripts/angularApp.js"></script>
    <script src="javascripts/jquery.countdown.js"></script>


  </head>
  <body ng-app="ToastAI" ng-controller="MainCtrl">
    
    <div class="ui sidebar inverted vertical menu blue">
      <a class="item">
        Login/User
      </a>
      <a class="item" href="/toast/view">> 
        View Toast
      </a>
      <a class="item">
        About us
      </a>
      <a class="item">
        Contact Us
      </a>
    </div>
    <div class="pusher">
      <div class="ui secondary  blue inverted menu">
        <a class="icon item" onclick="togglesidebar()">
          <i class="ui content icon" >  </i> 
        </a>
        <a class="header item" href="/">
    T.O.A.S.T. AI
  </a>
      </div>
      <div class="ui container" >
      <div class= "ui centered large header"> <i> Rate </i> </div>
      <div class= "ui segment"> <div class="ui form">
  <div class="grouped fields">
    <label>What did you think of your toast??</label>
    <div class="field">
      <div class="ui radio checkbox" ng-click="toast.rating = 0">
        <input type="radio" name="example2" >
        <label>Perfect</label>
      </div>
    </div>
    <div class="field">
      <div class="ui radio checkbox" ng-click="toast.rating = -1">
        <input type="radio" name="example2" >
        <label>Undercooked</label>
      </div>
    </div>
    <div class="field">
      <div class="ui radio checkbox" ng-click="toast.rating = 1">
        <input type="radio" name="example2" >
        <label>Overcooked</label>
      </div>
    </div>
  </div>
</div> 
</div>
<div class= "ui red button" ng-click="createToast()"> Submit </div>


      </div>
  </body>
  <script>
  function togglesidebar() {
$(".ui.sidebar").sidebar("toggle")
 }
 $(".ui.checkbox").checkbox()
</script>
<style>
.header {
  text-align:center
}
.makecentered {
  text-align:center;
  margin:auto
}

.toastbutton {
  margin:10px !important
}
body {
  background-color: #E9ECED;
}
</html>


