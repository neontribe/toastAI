<html>
  <head>
    <title>My Angular App!</title>
    <meta name="viewport" content="width=device-width">
    <script
        src="https://code.jquery.com/jquery-2.2.4.js"
        integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI="
        crossorigin="anonymous"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.js"> </script>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.css">
        <script src="https://cdn.firebase.com/js/client/2.2.4/firebase.js"></script>

        <!-- AngularFire -->
        <script src="https://cdn.firebase.com/libs/angularfire/1.2.0/angularfire.min.js"></script>
    <script src="javascripts/angularApp.js"></script>
        
    
  </head>
  <body  ng-app="ToastAI" ng-controller="MainCtrl">
    <div class="ui sidebar inverted vertical menu blue">
      <a class="item">
        Login/User
      </a>
      <a class="item" href="/toast/view">> 
        View Toast
      </a>
      <a class="item">
        About us
      </a>
      <a class="item">
        Contact Us
      </a>
    </div>
    <div class="pusher">
    <div class="ui secondary  blue inverted menu">
  <a class="icon item" onclick="togglesidebar()">
    <i class="ui content icon" >  </i> 
  </a>
  <a class="header item">
    T.O.A.S.T. AI
  </a>
</div>
      <div class="ui centered container">
      <img src="http://kitchen-electronics.weebly.com/uploads/2/7/1/1/27118291/6608936_orig.jpg" class="ui centered circular image">
      <h2 class="ui centered header">
  
  T.O.A.S.T. AI 
</h2>
        <p class="ui makecentered">Hello and welcome to T.O.A.S.T. AI (The Overengineered AI Super Toaster)</p>
        <div style="margin:auto; text-align:center"  ng-init="getToasters()">
          <a href="/signin" class="ui extra huge button circular red makecentered toastbutton" ng-if="toasters.length > 0 && toasters[0].ready" style=""> Start </a> 
          <div class="ui red message" ng-if="toasters.length == 0">
              No toasters!
            </div>
            <div class="ui red message" ng-if="!toasters[0].ready && toasters.length > 0">
              Toaster not ready to toast
            </div>
          <div class="ui segment" ng-if="toasters.length > 0">
            <ul style="list-style: none;" ng-if="toasters.length > 0">
              <li ng-repeat="toaster in toasters">
                Toaster #{{$index +1}}
                <p>Status: {{toaster.status}}</p>
                <p><strong>Ready: {{toaster.ready}}</strong></p>
                <div class="ui divider"></div>
              </li>
            </ul>
            
          </div>
        </div>

        
      </div>
    </div>
  </body>
  <script>
  function togglesidebar() {
$(".ui.sidebar").sidebar("toggle")
  }
</script>
<style>
.header {
  text-align:center
}
.makecentered {
  text-align:center;
  margin:auto
}

.toastbutton {
  margin:10px !important
}
body {
  background-color: #E9ECED;
}
</html>


